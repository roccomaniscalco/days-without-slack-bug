---
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="flex h-screen flex-col items-center justify-center bg-black bg-gradient-to-br from-slate-950 to-slate-800 text-slate-300"
  >
    <slot />
  </body>
</html>
